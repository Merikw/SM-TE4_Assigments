<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextCSI" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/WhiteColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextCSI.small" parent="TextCSI">
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="ButtonCSI" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/button_color_text</item>
        <item name="android:background">@color/button_color_bg</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ButtonCSI.small" parent="ButtonCSI">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextCSI.Table" parent="TextCSI">
        <item name="android:textColor">@color/TetColor_Table</item>
    </style>

</resources>
